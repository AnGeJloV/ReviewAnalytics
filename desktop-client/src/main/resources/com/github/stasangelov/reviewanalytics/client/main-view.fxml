<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.github.stasangelov.reviewanalytics.client.controller.MainController">
    <stylesheets>
        <URL value="@dashboard.css"/>
    </stylesheets>
    <top>
        <MenuBar>
            <Menu text="Файл">
                <items>
                    <MenuItem onAction="#onLogout" text="Выход"/>
                </items>
            </Menu>
            <Menu fx:id="adminMenu" text="Управление">
                <items>
                    <MenuItem onAction="#onGoToAdminPanel" text="Управление отзывами"/>
                </items>
            </Menu>
            <Menu text="Аналитика">
                <MenuItem onAction="#onGoToComparison" text="Сравнение товаров"/>
            </Menu>
        </MenuBar>
    </top>
    <center>
        <ScrollPane fitToWidth="true" styleClass="dashboard-background">
            <content>
                <!-- Основной контейнер с серым фоном -->
                <VBox spacing="20.0" styleClass="dashboard-background">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                    </padding>
                    <children>

                        <HBox alignment="CENTER">
                            <children>
                                <Label styleClass="dashboard-title" text="Информационная панель"/>
                            </children>
                        </HBox>

                        <HBox alignment="BOTTOM_LEFT" spacing="10.0"
                              style="-fx-background-color: white; -fx-padding: 10; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0.5, 0, 1);">
                            <children>
                                <VBox>
                                    <children>
                                        <Label text="Период с:"/>
                                        <DatePicker fx:id="startDatePicker"/>
                                    </children>
                                </VBox>
                                <VBox>
                                    <children>
                                        <Label text="по:"/>
                                        <DatePicker fx:id="endDatePicker"/>
                                    </children>
                                </VBox>
                                <VBox>
                                    <children>
                                        <Label text="Категория:"/>
                                        <ComboBox fx:id="categoryComboBox" prefWidth="250.0"
                                                  promptText="Все категории"/>
                                    </children>
                                </VBox>
                                <Button onAction="#applyFilters" text="Применить"/>
                                <Button onAction="#resetFilters" text="Сбросить"/>
                            </children>
                        </HBox>

                        <!-- СЕКЦИЯ KPI-КАРТОЧЕК (теперь в HBox) -->
                        <HBox spacing="20.0">
                            <children>
                                <VBox prefHeight="114.0" prefWidth="250.0" styleClass="kpi-card" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label styleClass="kpi-title" text="Всего отзывов"/>
                                        <Label fx:id="totalReviewsLabel" styleClass="kpi-value" text="-"/>
                                    </children>
                                </VBox>
                                <VBox styleClass="kpi-card" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label styleClass="kpi-title" text="Средний интегральный рейтинг"/>
                                        <Label fx:id="avgRatingLabel" styleClass="kpi-value" text="-"/>
                                    </children>
                                </VBox>

                            </children>
                        </HBox>

                        <!-- СЕКЦИЯ ГРАФИКОВ (в GridPane для разделения 50/50) -->
                        <GridPane hgap="20.0" VBox.vgrow="ALWAYS">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" percentWidth="50.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" percentWidth="50.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <VBox styleClass="chart-card">
                                    <children>
                                        <Label styleClass="chart-title" text="Топ-5 лучших товаров"/>
                                        <BarChart fx:id="topProductsChart" animated="false" legendVisible="false"
                                                  VBox.vgrow="ALWAYS">
                                            <xAxis>
                                                <NumberAxis side="BOTTOM"/>
                                            </xAxis>
                                            <yAxis>
                                                <CategoryAxis side="LEFT"/>
                                            </yAxis>
                                        </BarChart>
                                    </children>
                                </VBox>
                                <VBox styleClass="chart-card" GridPane.columnIndex="1">
                                    <children>
                                        <Label styleClass="chart-title" text="Топ-5 худших товаров"/>
                                        <BarChart fx:id="worstProductsChart" animated="false" legendVisible="false"
                                                  VBox.vgrow="ALWAYS">
                                            <xAxis>
                                                <NumberAxis side="BOTTOM"/>
                                            </xAxis>
                                            <yAxis>
                                                <CategoryAxis side="LEFT"/>
                                            </yAxis>
                                        </BarChart>
                                    </children>
                                </VBox>
                            </children>
                        </GridPane>

                        <!-- НОВАЯ СЕКЦИЯ ГРАФИКОВ -->
                        <GridPane hgap="20.0" VBox.vgrow="ALWAYS">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" percentWidth="50.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" percentWidth="50.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <VBox styleClass="chart-card">
                                    <children>
                                        <Label fx:id="categoryChartTitle" styleClass="chart-title" text="Средний рейтинг по категориям" />
                                        <BarChart fx:id="categoryChart" animated="false" legendVisible="false" VBox.vgrow="ALWAYS">
                                            <xAxis>
                                                <CategoryAxis side="BOTTOM" />
                                            </xAxis>
                                            <yAxis>
                                                <NumberAxis side="LEFT" />
                                            </yAxis>
                                        </BarChart>
                                    </children>
                                </VBox>
                                <VBox styleClass="chart-card" GridPane.columnIndex="1">
                                    <children>
                                        <Label styleClass="chart-title" text="Динамика среднего рейтинга" />
                                        <LineChart fx:id="dynamicsChart" animated="false" legendVisible="false" VBox.vgrow="ALWAYS">
                                            <xAxis>
                                                <CategoryAxis side="BOTTOM" label="Дата" />
                                            </xAxis>
                                            <yAxis>
                                                <NumberAxis side="LEFT" label="Средний рейтинг" />
                                            </yAxis>
                                        </LineChart>
                                    </children>
                                </VBox>
                            </children>
                        </GridPane>
                        <VBox styleClass="chart-card">
                            <children>
                                <Label styleClass="chart-title" text="Распределение оценок по критериям" />
                                <ScrollPane fx:id="distributionChartScrollPane" fitToHeight="true" fitToWidth="true" VBox.vgrow="ALWAYS">
                                    <content>
                                        <StackedBarChart fx:id="distributionChart" animated="false" legendSide="BOTTOM">
                                            <xAxis>
                                                <CategoryAxis side="BOTTOM" label="Критерии"/>
                                            </xAxis>
                                            <yAxis>
                                                <NumberAxis side="LEFT" label="Количество оценок"/>
                                            </yAxis>
                                        </StackedBarChart>
                                    </content>
                                </ScrollPane>
                            </children>
                        </VBox>
                        <VBox styleClass="chart-card" VBox.vgrow="ALWAYS">
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 0 0 10 0;">
                                    <Label styleClass="chart-title" text="Сводка по товарам" />
                                    <Region HBox.hgrow="ALWAYS" />
                                    <TextField fx:id="productSearchField" promptText="Поиск по названию, бренду..." prefWidth="300"/>
                                </HBox>
                                <TableView fx:id="productsSummaryTable" VBox.vgrow="ALWAYS">
                                    <columns>
                                        <TableColumn fx:id="productNameCol" prefWidth="250.0" text="Название товара" />
                                        <TableColumn fx:id="categoryCol" prefWidth="150.0" text="Категория" />
                                        <TableColumn fx:id="brandCol" prefWidth="150.0" text="Бренд" />
                                        <TableColumn fx:id="reviewCountCol" prefWidth="120.0" text="Кол-во отзывов" />
                                        <TableColumn fx:id="avgRatingCol" prefWidth="150.0" text="Средний рейтинг" />
                                        <TableColumn fx:id="selectCol" prefWidth="70.0" text="Сравнить" />
                                    </columns>
                                </TableView>
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>
