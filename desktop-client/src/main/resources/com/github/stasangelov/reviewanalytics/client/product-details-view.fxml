<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="700.0" prefWidth="1000.0" spacing="15.0" styleClass="dashboard-background" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.stasangelov.reviewanalytics.client.controller.ProductDetailsController">
    <stylesheets>
        <URL value="@dashboard.css" />
    </stylesheets>
    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
    </padding>
    <children>
        <!-- ЗАГОЛОВОК -->
        <HBox alignment="CENTER_LEFT" spacing="20">
            <Label fx:id="productNameLabel" styleClass="dashboard-title" text="Название товара..." />
            <Region HBox.hgrow="ALWAYS" />
            <CheckBox fx:id="compareCheckBox" onAction="#handleToggleCompare" text="Добавить к сравнению" />
        </HBox>

        <!-- СЕКЦИЯ KPI -->
        <HBox spacing="20.0">
            <VBox styleClass="kpi-card" HBox.hgrow="ALWAYS">
                <Label styleClass="kpi-title" text="Средний рейтинг" />
                <Label fx:id="avgRatingLabel" styleClass="kpi-value" text="-" />
            </VBox>
            <VBox styleClass="kpi-card" HBox.hgrow="ALWAYS">
                <Label styleClass="kpi-title" text="Количество отзывов" />
                <Label fx:id="reviewCountLabel" styleClass="kpi-value" text="-" />
            </VBox>
            <VBox styleClass="kpi-card" HBox.hgrow="ALWAYS">
                <Label styleClass="kpi-title" text="Категория" />
                <Label fx:id="categoryLabel" styleClass="kpi-value" text="-" />
            </VBox>
            <VBox styleClass="kpi-card" HBox.hgrow="ALWAYS">
                <Label styleClass="kpi-title" text="Бренд" />
                <Label fx:id="brandLabel" styleClass="kpi-value" text="-" />
            </VBox>
        </HBox>

        <!-- СЕКЦИЯ ГРАФИКА И ТАБЛИЦЫ -->
        <GridPane hgap="20.0" VBox.vgrow="ALWAYS">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" percentWidth="49.0" />
                <ColumnConstraints hgrow="SOMETIMES" percentWidth="51.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <!-- ПРОФИЛЬ КРИТЕРИЕВ (место для RadarChart) -->
                <VBox prefHeight="490.0" prefWidth="481.0" styleClass="chart-card">
                    <Label styleClass="chart-title" text="Профиль сильных/слабых сторон" />

                    <!-- PieChart теперь занимает верхнюю часть VBox -->
                    <PieChart fx:id="criteriaProfileChart" VBox.vgrow="ALWAYS" />

                    <!-- Контейнер для кастомной легенды теперь внизу -->
                    <FlowPane fx:id="customLegendPane" alignment="CENTER" hgap="15" vgap="5" style="-fx-padding: 10;" />
                </VBox>

                <!-- ТАБЛИЦА ОТЗЫВОВ -->
                <VBox prefHeight="490.0" prefWidth="506.0" styleClass="chart-card" GridPane.columnIndex="1">
                    <Label styleClass="chart-title" text="Список отзывов" />
                    <TableView fx:id="reviewsTable" VBox.vgrow="ALWAYS">
                        <columns>
                        </columns>
                    </TableView>
                </VBox>
            </children>
        </GridPane>
    </children>
</VBox>
